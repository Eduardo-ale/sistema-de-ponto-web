# Configurações do Servidor de E-mail
# Copie este arquivo para .env e configure suas credenciais

# Servidor SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app

# URLs do Sistema
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Ambiente
NODE_ENV=development

# Configurações de Segurança
JWT_SECRET=sua-chave-secreta-jwt
SESSION_SECRET=sua-chave-secreta-sessao

# Banco de Dados (se necessário)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sistema_ponto
DB_USER=postgres
DB_PASS=sua-senha-do-banco

# Configurações de E-mail Adicionais
EMAIL_FROM_NAME=Sistema de Ponto Web
EMAIL_FROM_ADDRESS=noreply@sistemaponto.com
EMAIL_REPLY_TO=suporte@sistemaponto.com

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log





